{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": ["/d", "/c"]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "${config:clear_static_partitions_unix} && west build -b pinnacle_100_dvk -d ${workspaceRoot}/build ${workspaceRoot}/code",
      "windows": {
        "command": "${config:clear_static_partitions_windows} && west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build ${workspaceRoot}\\code"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "re-build",
      "type": "shell",
      "command": "${config:clear_static_partitions_unix} && west build -p -b pinnacle_100_dvk -d ${workspaceRoot}/build ${workspaceRoot}/code",
      "windows": {
        "command": "${config:clear_static_partitions_windows} && west build -p -b pinnacle_100_dvk -d ${workspaceRoot}\\build ${workspaceRoot}\\code"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash app",
      "type": "shell",
      "command": "west flash -d ${workspaceRoot}/build/",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\"
      },
      "problemMatcher": []
    },
    {
      "label": "clean app",
      "type": "shell",
      "command": "west build -t clean -d ${workspaceRoot}/build/",
      "windows": {
        "command": "west build -t clean -d ${workspaceRoot}\\build\\"
      },
      "problemMatcher": []
    },
    {
      "label": "pristine app",
      "type": "shell",
      "command": "west build -t pristine -d ${workspaceRoot}/build/",
      "windows": {
        "command": "west build -t pristine -d ${workspaceRoot}\\build\\"
      },
      "problemMatcher": []
    },
    {
      "label": "menuconfig",
      "type": "shell",
      "command": "west build -t menuconfig -d ${workspaceRoot}/build/ ${workspaceRoot}/code",
      "windows": {
        "command": "west build -t menuconfig -d ${workspaceRoot}\\build\\ ${workspaceRoot}\\code"
      },
      "problemMatcher": []
    },
    {
      "label": "app ram_report",
      "type": "shell",
      "command": "west build -d ${workspaceRoot}/build/ ${workspaceRoot}/code --target ram_report > ${workspaceRoot}/build/ram_report",
      "windows": {
        "command": "west build -d ${workspaceRoot}\\build\\ ${workspaceRoot}\\code --target ram_report > ${workspaceRoot}\\build\\\\ram_report"
      },
      "problemMatcher": []
    },
    {
      "label": "app rom_report",
      "type": "shell",
      "command": "west build -d ${workspaceRoot}/build/ ${workspaceRoot}/code --target rom_report > ${workspaceRoot}/build/rom_report",
      "windows": {
        "command": "west build -d ${workspaceRoot}\\build\\ ${workspaceRoot}\\code --target rom_report > ${workspaceRoot}\\build\\\\rom_report"
      },
      "problemMatcher": []
    },
    {
      "label": "build with mcuboot",
      "type": "shell",
      "command": "${config:setup_static_partitions_unix} && west build -b pinnacle_100_dvk -d ${workspaceRoot}/build ${workspaceRoot}/code -- -DOVERLAY_CONFIG=\"${config:app_mcuboot_config_unix}\" -Dmcuboot_CONF_FILE=\"${config:mcuboot_config_unix}\" '-DCONFIG_MCUBOOT_IMAGE_VERSION=\"${input:app_ver}\"'",
      "windows": {
        "command": "${config:setup_static_partitions_windows} && west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build ${workspaceRoot}\\code -- -DOVERLAY_CONFIG=\"${config:app_mcuboot_config_windows}\" -Dmcuboot_CONF_FILE=\"${config:mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/mcuboot ${workspaceRoot}/../bootloader/mcuboot/boot/zephyr -- -DCONF_FILE=\"${config:mcuboot_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\mcuboot ${workspaceRoot}\\..\\bootloader\\mcuboot\\boot\\zephyr -- -DCONF_FILE=\"${config:mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash mcuboot",
      "type": "shell",
      "command": "west flash -d ${workspaceRoot}/build/mcuboot",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\mcuboot"
      },
      "problemMatcher": []
    },
    {
      "label": "aws - build flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": ["build with mcuboot", "flash app"],
      "problemMatcher": []
    },
    {
      "label": " - build flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": ["build  with mcuboot", "flash app"],
      "problemMatcher": []
    },
    {
      "label": "mcumgr upload signed app",
      "type": "shell",
      "command": "sudo mcumgr -t 20 -r 2 ${input:mcumgr_cnx} image upload ${workspaceRoot}/build/zephyr/zephyr.signed.bin",
      "problemMatcher": []
    },
    {
      "label": "mcumgr list images",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image list",
      "problemMatcher": []
    },
    {
      "label": "mcumgr test image",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image test ${input:image-hash}",
      "problemMatcher": []
    },
    {
      "label": "mcumgr reset",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} reset",
      "problemMatcher": []
    },
    {
      "label": "mcumgr confirm",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image confirm",
      "problemMatcher": []
    },
    {
      "label": "mcumgr echo",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} echo 'hello'",
      "problemMatcher": []
    },
    {
      "label": "mcumgr upload file",
      "type": "shell",
      "command": "sudo mcumgr -t 5 -r 2 ${input:mcumgr_cnx} fs upload ${input:src_file_path} /lfs/${input:dst_file_name}",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "mcumgr_cnx",
      "description": "mcumgr connection params",
      "type": "pickString",
      "options": [
        // Change 'peer_name=' to match your device name
        "--conntype ble --connstring ctlr_name=hci0,peer_name='Pinnacle 100 OOB-0297917'",
        // Change 'dev=' to match your serial device
        "--conntype serial --connstring dev=/dev/tty.usbserial-A908JLEI,mtu=2048"
      ]
    },
    {
      "id": "image-hash",
      "description": "hash of firmware image",
      "type": "promptString",
      "default": "enter hash here"
    },
    {
      "id": "src_file_path",
      "description": "full path of file to upload",
      "type": "promptString",
      "default": "enter file path"
    },
    {
      "id": "dst_file_name",
      "description": "name of the destination file",
      "type": "promptString",
      "default": "enter file name"
    },
    {
      "id": "app_ver",
      "description": "firmware version",
      "type": "promptString"
    }
  ]
}
