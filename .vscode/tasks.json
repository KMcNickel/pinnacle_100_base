{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": ["/d", "/c"]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/oob_demo_aws ${workspaceRoot}/oob_demo",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\oob_demo_aws ${workspaceRoot}\\oob_demo"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "re-build",
      "type": "shell",
      "command": "west build -p -b pinnacle_100_dvk -d ${workspaceRoot}/build/oob_demo_aws ${workspaceRoot}/oob_demo",
      "windows": {
        "command": "west build -p -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\oob_demo_aws ${workspaceRoot}\\oob_demo"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash app",
      "type": "shell",
      "command": "west flash -d ${workspaceRoot}/build/${input:app}",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\${input:app}"
      },
      "problemMatcher": []
    },
    {
      "label": "clean app",
      "type": "shell",
      "command": "west build -t clean -d ${workspaceRoot}/build/${input:app}",
      "windows": {
        "command": "west build -t clean -d ${workspaceRoot}\\build\\${input:app}"
      },
      "problemMatcher": []
    },
    {
      "label": "pristine app",
      "type": "shell",
      "command": "west build -t pristine -d ${workspaceRoot}/build/${input:app}",
      "windows": {
        "command": "west build -t pristine -d ${workspaceRoot}\\build\\${input:app}"
      },
      "problemMatcher": []
    },
    {
      "label": "menuconfig",
      "type": "shell",
      "command": "west build -t menuconfig -d ${workspaceRoot}/build/${input:app} ${workspaceRoot}/oob_demo",
      "windows": {
        "command": "west build -t menuconfig -d ${workspaceRoot}\\build\\${input:app} ${workspaceRoot}\\oob_demo"
      },
      "problemMatcher": []
    },
    {
      "label": "build lwm2m",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/oob_demo_lwm2m ${workspaceRoot}/oob_demo -- -DCONF_FILE=\"${config:app_lwm2m_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\oob_demo_lwm2m ${workspaceRoot}\\oob_demo -- -DCONF_FILE=\"${config:app_lwm2m_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "app ram_report",
      "type": "shell",
      "command": "west build -d ${workspaceRoot}/build/${input:app} ${workspaceRoot}/oob_demo --target ram_report > ${workspaceRoot}/build/${input:app}/ram_report",
      "windows": {
        "command": "west build -d ${workspaceRoot}\\build\\${input:app} ${workspaceRoot}\\oob_demo --target ram_report > ${workspaceRoot}\\build\\${input:app}\\ram_report"
      },
      "problemMatcher": []
    },
    {
      "label": "app rom_report",
      "type": "shell",
      "command": "west build -d ${workspaceRoot}/build/${input:app} ${workspaceRoot}/oob_demo --target rom_report > ${workspaceRoot}/build/${input:app}/rom_report",
      "windows": {
        "command": "west build -d ${workspaceRoot}\\build\\${input:app} ${workspaceRoot}\\oob_demo --target rom_report > ${workspaceRoot}\\build\\${input:app}\\rom_report"
      },
      "problemMatcher": []
    },
    {
      "label": "build for mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/oob_demo_aws ${workspaceRoot}/oob_demo -- -DCONF_FILE=\"${config:app_aws_config_unix} ${config:app_mcuboot_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\oob_demo_aws ${workspaceRoot}\\oob_demo -- -DCONF_FILE=\"${config:app_aws_config_windows} ${config:app_mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build lwm2m for mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/oob_demo_lwm2m ${workspaceRoot}/oob_demo -- -DCONF_FILE=\"${config:app_lwm2m_config_unix} ${config:app_mcuboot_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\oob_demo_lwm2m ${workspaceRoot}\\oob_demo -- -DCONF_FILE=\"${config:app_lwm2m_config_windows} ${config:app_mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "build mcuboot",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}/build/mcuboot ${workspaceRoot}/../bootloader/mcuboot/boot/zephyr -- -DCONF_FILE=\"${config:mcuboot_config_unix}\"",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build\\mcuboot ${workspaceRoot}\\..\\bootloader\\mcuboot\\boot\\zephyr -- -DCONF_FILE=\"${config:mcuboot_config_windows}\""
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash mcuboot",
      "type": "shell",
      "command": "west flash -d ${workspaceRoot}/build/mcuboot",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build\\mcuboot"
      },
      "problemMatcher": []
    },
    {
      "label": "sign app",
      "type": "shell",
      "command": "west sign -t imgtool -d ${workspaceRoot}/build/${input:app} -- --key ${workspaceRoot}/../bootloader/mcuboot/root-rsa-2048.pem --version ${input:app_ver}",
      "windows": {
        "command": "west sign -t imgtool -d ${workspaceRoot}\\build\\${input:app} -- --key ${workspaceRoot}\\..\\bootloader\\mcuboot\\root-rsa-2048.pem --version ${input:app_ver}"
      },
      "problemMatcher": []
    },
    {
      "label": "create app image",
      "type": "shell",
      "command": "west sign -t imgtool -d ${workspaceRoot}/build/${input:app} -- --version ${input:app_ver}",
      "windows": {
        "command": "west sign -t imgtool -d ${workspaceRoot}\\build\\${input:app} -- --version ${input:app_ver}"
      },
      "problemMatcher": []
    },
    {
      "label": "flash signed app",
      "type": "shell",
      "command": "west flash --skip-rebuild -d ${workspaceRoot}/build/${input:app} --hex-file ${workspaceRoot}/build/${input:app}/zephyr/zephyr.signed.hex",
      "windows": {
        "command": "west flash --skip-rebuild -d ${workspaceRoot}\\build\\${input:app} --hex-file ${workspaceRoot}\\build\\${input:app}\\zephyr\\zephyr.signed.hex"
      },
      "problemMatcher": []
    },
    {
      "label": "aws - build sign flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": ["build for mcuboot", "sign app", "flash signed app"],
      "problemMatcher": []
    },
    {
      "label": "aws - build flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build for mcuboot",
        "create app image",
        "flash signed app"
      ],
      "problemMatcher": []
    },
    {
      "label": "lwm2m - build sign flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": ["build lwm2m for mcuboot", "sign app", "flash signed app"],
      "problemMatcher": []
    },
    {
      "label": "lwm2m - build flash",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "build lwm2m for mcuboot",
        "create app image",
        "flash signed app"
      ],
      "problemMatcher": []
    },
    {
      "label": "mcumgr upload signed app",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image upload ${workspaceRoot}/build/${input:app}/zephyr/zephyr.signed.bin",
      "problemMatcher": []
    },
    {
      "label": "mcumgr list images",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image list",
      "problemMatcher": []
    },
    {
      "label": "mcumgr test image",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image test ${input:image-hash}",
      "problemMatcher": []
    },
    {
      "label": "mcumgr reset",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} reset",
      "problemMatcher": []
    },
    {
      "label": "mcumgr confirm",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} image confirm",
      "problemMatcher": []
    },
    {
      "label": "mcumgr echo",
      "type": "shell",
      "command": "sudo mcumgr ${input:mcumgr_cnx} echo 'hello'",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "app",
      "description": "Select an app",
      "default": "oob_demo_aws",
      "type": "pickString",
      "options": ["oob_demo_aws", "oob_demo_lwm2m"]
    },
    {
      "id": "mcumgr_cnx",
      "description": "mcumgr connection params",
      "type": "pickString",
      "options": [
        // Change 'peer_name=' to match your device name
        "--conntype ble --connstring ctlr_name=hci0,peer_name='Pinnacle 100 OOB-0303848'",
        // Change 'dev=' to match your serial device
        "--conntype serial --connstring dev=/dev/tty.usbserial-A908JLEI"
      ]
    },
    {
      "id": "image-hash",
      "description": "hash of firmware image",
      "type": "promptString",
      "default": "enter hash here"
    },
    {
      "id": "app_ver",
      "description": "firmware version",
      "type": "promptString"
    }
  ]
}
