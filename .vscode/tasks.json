{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
          "/d",
          "/c"
        ]
      }
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d build oob_demo",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build ${workspaceRoot}\\oob_demo"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "re-build",
      "type": "shell",
      "command": "west build -p -b pinnacle_100_dvk -d build oob_demo",
      "windows": {
        "command": "west build -p -b pinnacle_100_dvk -d ${workspaceRoot}\\build ${workspaceRoot}\\oob_demo"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "flash application",
      "type": "shell",
      "command": "west flash -d build",
      "windows": {
        "command": "west flash -d ${workspaceRoot}\\build"
      },
      "problemMatcher": []
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "west build -t clean -d build",
      "windows": {
        "command": "west build -t clean -d ${workspaceRoot}\\build"
      },
      "problemMatcher": []
    },
    {
      "label": "pristine",
      "type": "shell",
      "command": "west build -t pristine -d build",
      "windows": {
        "command": "west build -t pristine -d ${workspaceRoot}\\build"
      },
      "problemMatcher": []
    },
    {
      "label": "configurator",
      "type": "shell",
      "command": "west build -t menuconfig",
      "windows": {
        "command": "west build -t menuconfig"
      },
      "problemMatcher": []
    },
    {
      "label": "build-lwm2m",
      "type": "shell",
      "command": "west build -b pinnacle_100_dvk -d build oob_demo -DCONF_FILE=prj.conf;overlay_lwm2m_dtls.conf",
      "windows": {
        "command": "west build -b pinnacle_100_dvk -d ${workspaceRoot}\\build ${workspaceRoot}\\oob_demo -- -DCONF_FILE=${workspaceRoot}\\oob_demo\\prj.conf;${workspaceRoot}\\oob_demo\\overlay_lwm2m_dtls.conf"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
  ]
}